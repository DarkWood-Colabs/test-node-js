{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/socket.io",
      "dest": "index.js"
    },
    {
      "src": "/api/chat",
      "dest": "index.js"
    },
    {
      "src": "/(.*)",
      "dest": "public/$1"
    }
  ],
  "env": {
    "API_KEY": "YOUR_API_KEY",
    "OTHER_ENV_VARIABLE": "some_value"
  },
  "serverless": true
}

